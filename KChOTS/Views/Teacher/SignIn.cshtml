<div id = "wrapper">
@using (Html.BeginForm())
{   
    <div id="login">
    <form action="Index" autocomplete="on">
        <h1>Teacher Sign In</h1>
        <p>@Html.ValidationSummary()</p>
            <p>
                <label for="username" data-icon="e"> Your email</label>
                <input type="text" name="email" placeholder="info@mail.com" autofocus required/>
            </p>
            <p>
                <label for="password" data-icon="p"> Your password </label>
                <input type="password" name="password" placeholder="eg. 2in1qwerty" required/>   
            </p>
            <p class="keeplogin">
                <input type="checkbox" name="loginkeeping"/>
                <label for="loginkeeping">Keep me logged in</label>
            </p>
            <p>
                <input class="login button" style="margin:0;" type="submit" value="Sign In" /><br />
            </p>
            <p class="change_link">
                Not a member yet ?
                <a href="Register" >Join us</a>
                Forgot Password ?
                <a href="../Account/RequestResetPassword" >Click here!</a>
            </p>
        </form>
    </div>
}
