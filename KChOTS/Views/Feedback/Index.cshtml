@{
    ViewBag.Title = "Index";
    Layout = "../Shared/_Layout.cshtml";
}


<div class="sendfeedbackwrapper">
<div id="wrapper">
<div id="feedback">
<h1>Send Us Your Feedback</h1>
    <form method="post" action="#">
        <p><label for="subject">Subject</label>
           <input type = "text" name="subject" placeholder="Feedback Subject" />
        </p>
        <p>
           <label for="message">Message</label>
           <textarea class="message" name="message" placeholder="Your Message Here"></textarea>  
        </p>
           <input type ="submit" class="button" value="Send Feedback" />
    </form>
</div>
</div>
</div>


