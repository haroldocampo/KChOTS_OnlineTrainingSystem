@{
    ViewBag.Title = "RequestResetPassword";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<div class="resetwrapper">
    <div id="wrapper">
        <div id="reset">
            <form method="post" action="#">
                <h1>Reset Your Password</h1>
                    <table width="480">
                        <tr>
                            <td align=center>To Reset Your Password Please Type in Your Email Address</td>
                        </tr>
                        <tr>
                            <td align=center><p><input type="text" name="email" placeholder="info@mail.com" required/></p></td>
                        </tr>
                        <tr>
                            <td align=center><input type="submit" class="button" value="Submit Request" /></td>
                        </tr>
                    </table>
            </form>
        </div>
    </div>
</div>