<div id="eventcalendar" style="width: 400px; min-height:600px;"></div>
<script type="text/javascript">
    $(function () {
            $("#eventcalendar").fullCalendar({
                theme: true,
                aspectRatio: 3,
                eventSources: [{
                    url: '@Url.Action("Calendar","Utility")',
                    type: 'GET',
                    color: 'green'
                }]
            });
        });
</script>